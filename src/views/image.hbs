<div class="grid-image" style="width: 60%;margin-left: 4rem">

    <!--las publicaciones de las imagenes-->
    <form action="/images" method="POST" enctype="multipart/form-data">
        <div id="border-contenedor" class="card mb-3 " style="max-width: 40rem;">
            <div class="card" style="width: 100%;">
                <img width="100%" height="80%" src="../public/upload/{{img.filename}}" alt="...">
                <div class="card-body" style="display: flex;flex-direction: row;">
                    <div style="width: 50%;display: flex;flex-direction: column;">
                        <h5 class="card-title">{{img.title}}</h5>
                        <p class="card-text">{{img.description}}</p>
                    </div>
                    <div style="display: flex;width: 50%;justify-content: flex-end;align-items: flex-end;">
                        <i class="fa fa-clock"></i>
                        <span style="font-size: 10px;">{{timeago img.timestamp}}</span>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <!--card para los comentarios-->
    <div>
        <div class="card border-dark container-coments">
            <div class="div-comments">
                <div class="div-coments-1">

                    <i class="far fa-thumbs-up"></i>
                    <span class="cantidad-likes">{{img.likes}}</span>

                    <i class="far fa-comments"></i>
                    <span class="cantidad-commen">{{img.coments}}</span>
                </div>
            </div>

        </div>

        <div class="card border-dark container-coments1">
            <div class="div-coments-2">
                <div class="likes">
                    <i class="far fa-thumbs-up"></i> Me gusta
                </div>

                <div class="comments">
                    <i class="far fa-comments"></i> Comentarios
                </div>

            </div>


        </div>

        <!--contenedor de comentarios-->
        <div style="width: 100%;background:#D4DAE2;display: flex;justify-content: center;align-items: center    ;">
            <div class="card-body">
                <blockquote id="post-comment">
                    <form action="/images/{{img.uniqueId}}/comment" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="name" placeholder="Name">
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" name="email" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <textarea name="comment" class="form-control" rows="2" placeholder="Your Comment"></textarea>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success" id="btn-comment">
                                <i class="fa fa-comment"></i> Posasdasdtasdasd
                            </button>
                        </div>
                    </form>
                </blockquote>

                <ul class="list-group p-4">
                    {{#each comment}}
                    <li class="list-group-item">
                        <div class="row">
                            <a href="#" class="col text-center">
                                <img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45" />
                            </a>
                            <blockquote class="col">
                                <p class="lead">{{comment}}</p>
                                <footer class="blockquote-footer">
                                    {{name}}- {{timeago timestamp}}
                                </footer>
                            </blockquote>
                        </div>
                    </li>
                    {{/each}}
                </ul>


            </div>
        </div>
    </div>
</div>







</div>
</div>
<!--los stack o publicaciones-->